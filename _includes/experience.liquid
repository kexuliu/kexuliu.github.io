<style>
  .experience-logo {
    width: 300px; /* 设定固定宽度 */
    height: 80px; /* 设定固定高度 */
    object-fit: contain; /* 保持图片比例，填充整个区域 */
  }
</style>


<div class="experience-list">
  {% assign experiences = site.data.experience | reverse %} <!-- 反转顺序，让最新的经历在前 -->
  <table class="table table-borderless">
    {% for item in experiences %}
      <tr>
        <td style="width: 30%;">
          <img src="{{ '/assets/img/' | append: item.logo }}" alt="{{ item.institution }} logo" class="experience-logo">
        </td>
        <td>
          <strong>{{ item.date }}</strong>: {{ item.title }},
          {{ item.description }}
        </td>
      </tr>
    {% endfor %}
  </table>
</div>
